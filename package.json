{
  "name": "@buckneri/table",
  "version": "0.2.1",
  "description": "Just an HTML table",
  "main": "./dist/table.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run compile-js",
    "compile-css": "npm run c-scss & npm run c-postcss",
    "compile-js": "rollup -cw",
    "c-postcss": "postcss docs/css/table.css --no-map -o docs/css/table.css -c postcss.config.js",
    "c-scss": "sass src/css:docs/css --no-source-map",
    "eslint": "eslint -c .eslintrc.json --ext .ts --ext .js ./src",
    "list-globals": "npm list -g --depth 0",
    "make": "npm run c-scss & npm run c-postcss & npm run m-typedef & npm run m-rmdir & npm run m-css",
    "m-css": "cpy docs/css/table.css dist",
    "m-typedef": "move-file dist/src/index.d.ts dist/index.d.ts",
    "m-rmdir": "rimraf dist/src dist/iife/src",
    "test": "http-server ./docs -a localhost -p 5000 -o",
    "test-upload": "npm publish --dry-run --access public",
    "upload": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibuckner/table.git"
  },
  "author": "Ivor Buckner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibuckner/table/issues"
  },
  "homepage": "https://github.com/ibuckner/table#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/jest": "26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "autoprefixer": "^9.8.5",
    "clean-css": "^4.2.3",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "30.0.3",
    "jest": "^26.1.0",
    "jsdoc": "3.6.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-sorting": "^5.0.1",
    "rollup": "2.23.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  }
}
